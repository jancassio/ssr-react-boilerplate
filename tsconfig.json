{
  "compilerOptions": {
    "module": "es6",
    "target": "es2016",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
